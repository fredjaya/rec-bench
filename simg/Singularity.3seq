
BootStrap: shub
From: shub://fredjaya/rec-bench:base@digest

%post
    yum -y install scl-utils-build devtoolset-6
    scl enable devtoolset-6 bash
    # Add 3seq
    cd usr/src
    wget http://mol.ax/rxiv/3seq_build_170612.zip
    unzip 3seq_build_170612.zip
    rm 3seq_build_170612.zip
    cd 3seq\ build\ 170612
    make
    ./3seq # test bin

    # Create p-value table
    ./3seq -g my3seqTable300 300


%environment
    export PATH=/usr/src/3seq\ build\ 170612/:$PATH
