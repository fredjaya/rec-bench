}

process {
  withName: S4_santa {
    executor = 'pbs'
    queue = 'smallq'
    cpus = 2
    memory = 8.GB
  }
}

trace {
  enabled = true
  file = "${params.tracedir}/trace.csv"
  sep = ','
}

timeline {
  enabled = true
  file = "${params.tracedir}/timeline.html"
}

report {
  // TO DO: Fix 'install graphviz'
  enabled = true
  file = "${params.tracedir}/report.html"
}

dag {
  enabled = true
  file = "${params.tracedir}/flowchart.pdf"
}

process {
    executor = 'local'
    cpus = 2
    memory = 4.GB
  }
