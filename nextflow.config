manifest {
  name = 'fredjaya/rec-bench'
  author = 'Fred Jaya'
  homePage = 'https://github.com/fredjaya/rec-bench'
  description = 'Benchmarking of recombination detection methods using SANTA-SIM'
}

process {
    
    withLabel: local {
        executor = 'local'
        cpus = 2
        memory = 4.GB
  }

    withLabel: sim_benchmark {
        executor = 'pbs'
        cpus = 1
        memory = 16.GB
        time = '24h'
    }

}

trace {
  enabled = true
  file = "${params.out}/tracing/trace.csv"
  sep = ','
}

timeline {
  enabled = true
  file = "${params.out}/tracing/timeline.html"
}

dag {
    enabled = true
    file = "${params.out}/tracing/flowchart.png"
}
